{
  "name": "infinite_read",
  "displayName": "无限知识库",
  "version": "1.0.0",
  "description": "一款无限知识库应用",
  "private": true,
  "type": "module",
  "homepage": "https://qcgm1978.github.io/revelation/",
  "scripts": {
    "dev": "vite",
    "sync": "cnpm sync llm-service-provider gem-timeline-data",
    "update": "sudo  chmod -R 777 ./ && cnpm update llm-service-provider gem-timeline-data",
    "generate-images": "node scripts/generate_images.js",
    "build": "npm run generate-images && vite build && node scripts/replace_env_vars.js",
    "deploy": "vite build && npx gh-pages -d dist -r https://github.com/qcgm1978/revelation.git -f",
    "preview": "vite preview",
    "format-file": "node utils/fileFormatter.js",
    "capacitor:build:android": "sudo npm run build && sudo npx cap sync android && sudo chmod -R 777 ./ && sudo npx cap open android",
    "capacitor:build:android:noopen": "sudo npm run build && sudo npx cap sync android && sudo chmod -R 777 ./",
    "capacitor:build:android:ci": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug",
    "vercel": "vercel",
    "deploy:gh-pages": "vite build && npx gh-pages -d dist -r https://github.com/qcgm1978/revelation.git -f"
  },
  "dependencies": {
    "@capacitor-community/text-to-speech": "^6.0.0",
    "@capacitor/android": "^7.4.2",
    "@capacitor/app": "^7.0.2",
    "@capacitor/browser": "^7.0.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@capacitor/filesystem": "^7.1.4",
    "@google/genai": "^1.7.0",
    "@ionic/react": "^8.7.3",
    "@ionic/react-router": "^8.7.3",
    "@vitejs/plugin-react": "^5.0.2",
    "gem-timeline-data": "latest",
    "langextract": "^1.2.0",
    "llm-service-provider": "latest",
    "query-string": "^9.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.9.1",
    "react-router-dom": "^7.9.1",
    "sse.js": "^2.7.1",
    "terser": "^5.44.0",
    "uuid": "^13.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.0",
    "gh-pages": "^6.3.0",
    "sharp": "^0.34.4",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
